Funcion ejercicio24
	Definir num Como Entero
	Definir dia Como Cadena
	Escribir 'Ingrese un numero'
	Leer num
	Si num>=1 Y num<=7 Entonces
		si num =1 Entonces
			dia = "Domingo"
		FinSi
		si num = 2 Entonces
			dia = "Lunes"
		FinSi
		si num = 3 Entonces
			dia = "Martes"
		FinSi
		si num = 4 Entonces
			dia = "Miercoles"
		FinSi
		si num = 5 Entonces
			dia = "Jueves"
		FinSi
		si num = 6 Entonces
			dia = "Viernes"
		FinSi
		si num = 7 Entonces
			dia = "Sabado"
		FinSi
		Escribir "Al numero ", num, " le corresponde el dia ", dia;
	SiNo
		Escribir "Ingrese un numero entre 1 y 7"
	FinSi
FinFuncion


